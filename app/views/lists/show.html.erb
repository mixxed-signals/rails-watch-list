
<%= @list.name %>

<p> movies: </p>

<div class="movies-container">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-4">
        <div class="movie-card">
          <div class="movie-image">
            <%= image_tag movie.poster_url, class: "img-fluid" %>
            <br>
          </div class="text-center">
          <br>
          <h2 class="text-center"><%= movie.title %></h2>
          <p class="text-center"><%= movie.overview %></p>
          <p class="text-center"><strong>Rating:</strong> <%= movie.rating %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div>
  <%= link_to "Back to lists", lists_path %>
  <%= link_to "Delete List", list_path(@list), method: :delete, data: { confirm: "Are you sure you want to delete this list?" } %>


</div>
